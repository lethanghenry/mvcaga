
@model IEnumerable<Basic_level2_agan.Models.Blog>
<!DOCTYPE html>
<html>
<head>
    <title>list blogs</title>
    <style>
        .edt {
            border: 1px solid green;
        }

        .del {
            border: 1px solid red;
        }

        .text {
            color: green;
            text-decoration: none;
        }

        .text2 {
            color: red;
            text-decoration: none;
        }
    </style>

</head>
<body>

    <h3>List Blogs</h3>
    <table class="table" border="1 solid black">
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.tin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.loai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.viTri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ngayPublic)
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.tin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.loai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trangThai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.viTri)
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => item.ngayPublic)
                </td>
                <td>
                    <button class="edt">
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "text" })

                    </button>

                </td>
                <td>
                    <button class="del">
                        @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "text2" })
                    </button>

                </td>
            </tr>
        }

    </table>




</body>
</html>

